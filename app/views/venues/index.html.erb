<h1 class="headerIndex">Have a look at our unique locations</h1>
<div class="grid-mapIndex">
 <div class="cards-container ">
    <% @venues.each do |venue| %>
    <div class="card-venue" >
      <%= link_to venue_path(venue), class:"text-decoration-none" do %>
      <%= image_tag venue.photos.first, class:"card-img-top card-venue-img pictureIndex"%>
      <div class="card-body">
        <h5 class="card-title title"><%= venue.name %></h5>
        <h5 class="cardLocation"><%= venue.location %></h5>
        <% if venue.average_rating.zero? %>
          <small><em class="text-muted">no reviews yet</em></small>
        <% else %>
        <% venue.average_rating.times do %>
        <i class="fas fa-star star-yellow starColor"></i>
        <% end %>
        <% end %>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <div>
    <div id="map"
        style="height: 100vh; width: 27vw;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>
