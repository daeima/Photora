
<h1 class="text-center mb-3">Welcome <%= @user.first_name %></h1>

<div class="text-center"><%= link_to "Become owner", new_venue_path, class: "btn btn-secondary mt-5 "%></div>

<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-chat/ava3.png" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3"><%= @user.first_name + " "+ @user.last_name %></h5>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
            
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                <p class="mb-0">www.github.com</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                <p class="mb-0">https://twitter.com</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                <p class="mb-0">https://facebook.com</p>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">First Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.first_name%></p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Last Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.last_name%></p>
              </div>
            </div>
            
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0"><%= @user.email%></p>
              </div>
            </div>
          </div>
        </div>
         
           <ul class="nav nav-tabs" id="myTab" role="tablist">
             <li class="nav-item">
                  <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Bookings</a>
                  </li>
                 <% if @user.owner %>
                 <li class="nav-item">
                   <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Venues</a>
                 </li>
                 <% end %>
            </ul>
               <div class="tab-content" id="myTabContent">
                 <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                 
                          
                    <div class="row">
                      <div class="col-md-12">
                        <div class="card mb-4 mb-md-0">
                          <div class="card-body">
                            <% @user.bookings.each do |booking| %>
                            <%= link_to venue_path(booking.venue), class:'text-decoration-none' do %>
                              <div class="card-product">
                                  <%= image_tag booking.venue.photos.first%>
                                    <div class="card-product-infos">
                                      <h2><%= booking.venue.name %></h2>
                                      <p><%= booking.start_time %></p>
                                    </div>
                              </div>
                            <% end %>
                           <% end %>
                          </div>
                        </div>
                      </div>
                  </div>


                </div>
                 <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                 
                  <% if @user.owner %>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="card mb-4 mb-md-0">
                          <div class="card-body">
                            <% @user.venues.each do |venue| %>
                            <%= link_to venue_path(venue), class:'text-decoration-none' do %>
                              <div class="card-product">
                                  <%= image_tag venue.photos.first%>
                                    <div class="card-product-infos">
                                      <h2><%= venue.name%></h2>
                                      <p><%= venue.description %></p>
                                    </div>
                               </div>
                            <% end %>
                           <% end %>
                          </div>
                        </div>
                      </div>
                  </div>
              <% end %>
                 </div>
                
  </div>
</section>

           